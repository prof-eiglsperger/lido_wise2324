<div class="container">
    <form action="/meal" method="post">
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" maxlength="80" name="name">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Preis</label>
                <input type="text" class="form-control" maxlength="8" name="price">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Beschreibung</label>
                <input type="text" maxlength="255" class="form-control" size="40" name="description">
            </div>
        </div>
        <div class="form-group">
            <label class="col-form-label-lg">Kategorie</label>
             <select class="form-control" name="category">
            <% categories.forEach(function(category){ %>
                <option value="<%= category.id %>"><%= category.name %></option>
            <% }); %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Hinzuf√ºgen</button>
    </form>
</div>