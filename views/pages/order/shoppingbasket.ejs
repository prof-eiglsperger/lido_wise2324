<div class="container">
    <h2 class="mt-4">Ihr Einkauswagen</h2>

    <% if(req.session.basket && req.session.basket.length> 0){ %>
        <table class="table mt-4">
            <% req.session.basket.forEach(function(meal,index){ %>
                <tr>
                    <td class="menu-title">
                        <%= meal.name %> <BR>
                    </td>
                    <td class="menu-price">
                        <%= meal.price %> &euro;
                    </td>
                    <td class="menu-price">
                        <a class="badge badge-primary" href="/shoppingbasket/remove/<%= index %>">entfernen</a>
                    </td>
                </tr>
            <% }) %>
        </table>
        <div class="mb-4">
            <a class="btn btn-primary" href="/speisekarte">Weitere Speisen bestellen</a></li>
            <a class="btn btn-primary">Bestellung abschliessen</a></li>
        </div>
    <% } else{ %>
        <p>Der Warenkorb ist leer.</p>
        <div class="mb-4">
            <a class="btn btn-primary" href="/menu">Zur Speisekarte</a></li>
        </div>
    <% } %>
</div>